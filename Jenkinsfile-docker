pipeline {
    agent { label 'docker-agent' }

    stages {
        stage('CheckOut') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/partizang2/source-maven-java-spring-hello-webapp.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('ImageBuild & Tag') {
            steps {
                sh 'docker image build -t tomcat:hello .'
                sh "docker image tag tomcat:hello partizang2/tomcat:${BUILD_NUMBER}"
                sh "docker image tag tomcat:hello partizang2/tomcat:latest"
            }
        }

        stage('ImagePush') {
            steps {
                withDockerRegistry(credentialsId: 'docker-hub-token', url: 'https://index.docker.io/v1/') {
                    sh "docker image push partizang2/tomcat:${BUILD_NUMBER}"
                    sh "docker image push partizang2/tomcat:latest"
                }
            }
        }

        stage('Running Container') {
            steps {
                sh 'docker -H tcp://192.168.56.103:2375 rm -f webserver || true'
                sh 'docker -H tcp://192.168.56.103:2375 run -d --name webserver -p 80:8080 partizang2/tomcat:latest'
            }
        }
    }
}
